            android:drawablePadding="10dp"
            android:focusable="true"
            android:gravity="center"
            android:text="星期一"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
