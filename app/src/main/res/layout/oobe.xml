<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/oobe_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/oobe_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/oobe_video_layout"
            android:layout_width="800dp"
            android:layout_height="650dp"
            android:layout_marginTop="80dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <VideoView
                android:id="@+id/oobe_video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/oobe_image_view"
                android:layout_centerHorizontal="true"
                android:focusable="false"
                android:visibility="gone">


            </VideoView>
        </LinearLayout>

        <ImageView
            android:id="@+id/oobe_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:background="@android:color/transparent"
            android:src="@drawable/p_o_normal"
            android:visibility="visible"/>


    </RelativeLayout>
</RelativeLayout>